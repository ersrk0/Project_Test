    @Override
    public ResponseEntity<ByteArrayResource> downloadDocument() throws IOException {
        log.info("Downloading bulk invite template document");
        DocumentDownloadResponse document = bulkInviteFacade.downloadDocument();
        final HttpHeaders headers = new HttpHeaders();
        headers.add(HttpHeaders.CONTENT_TYPE, ApplicationConstants.EXCEL_CONTENT_TYPE);
        log.info("Bulk invite template document downloaded successfully");
        return ResponseEntity.ok()
                .header("Content-Disposition", "attachment; filename=\"template.xlsx\"")
                .body(document.getByteArrayResource());
    }	
